<body>
  <div class="index_flash">
    <%= flash[:notice] %>
  </div>
  <div class="post_container">
    <div>
      <% @posts.each do |post| %>
        <div id="post_index">
          <%= link_to(post.content, "/posts/#{post.id}/show") %>
        </div>
      <% end %>
    </div>
  </div>  
</body>
