<body>

  <div class="post_container">
    <div>
    <% if session[:name] == "guest" %>
      <% @guest_content.each do |post| %>
        <div class="post_index">
          <div class="post_left">
            <%= link_to(simple_format(post.content), "/posts/#{post.id}/show") %>
          </div>
          <div class="post_right">
            <%= link_to("削除", "/posts/#{post.id}/destroy", method: :post) %>
          </div>
        </div>
      <% end %>
    <% else %>
      <% @posts.each do |post| %>
        <div class="post_index">
          <div class="post_left">
            <%= link_to(simple_format(post.content), "/posts/#{post.id}/show") %>
          </div>
          <div class="post_right">
            <%= link_to("削除", "/posts/#{post.id}/destroy", method: :post) %>
          </div>
        </div>
      <% end %>
    <% end %>
    </div>
  </div>

</body>
